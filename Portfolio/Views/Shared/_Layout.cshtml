    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="description" content="Aarhus based Web Developer looking for a job.">
    <meta name="keywords" content="HTML,CSS,JavaScript,ASP.NET,WebDeveloper,Aarhus">
    <meta name="author" content="Søren Lund">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS Styles-->
    @Styles.Render("~/Content/css")
    <!-- Open Sans -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <!-- Font Awesome -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.9/js/all.js" integrity="sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl" crossorigin="anonymous"></script>

    <title>Søren Lund | Web Developer, Aarhus</title>
</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NW83HHV"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <header id="top">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#top">
                    <picture>
                        <source srcset="~/images/SoerenLundWebDeveloper.webp" type="image/webp"/>
                        <source srcset="~/images/SoerenLundWebDeveloper.png" type="image/png"/>
                        <img src="~/images/SoerenLundWebDeveloper.png"/>
                    </picture>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-md-flex justify-content-md-end" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link pl-3 pr-3" href="#top">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pl-3 pr-3" href="#projects">PROJECTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pl-3 pr-3" href="#contact">CONTACT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="container-fluid d-flex justify-content-center">
        <p>&copy; SRLUND.DK @DateTime.Now.Year</p>
    </footer>

    <!-- JavaScript, validation & Bootstrap -->
    @Scripts.Render("~/bundles/jQuery-and-validation")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/map")


    @*<script src="~/Scripts/map.js"></script>*@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCIPK1a-pLZwGaMb3b-WVWC1E5gO7Q21jQ&callback=initMap"
            async defer></script>

    @if (TempData["fail"] != null)
    {
        <script>
            $(document).ready(function () {
                var anchor = document.getElementById('contact');
                anchor.scrollIntoView(true);
            });
        </script>
    }
    @if (TempData["success"] != null)
    {
        <script>
            $(document).ready(function () {
                $('#thankYouModal').modal();
            });
        </script>
    }
    @RenderSection("Scripts", false)

</body>
</html>
