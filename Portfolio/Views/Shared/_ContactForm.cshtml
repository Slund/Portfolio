@model Portfolio.ViewModels.ContactForm

@{
    Layout = null;
}

@using (Html.BeginForm("HandleForm", "Home"))
{
    <div class="form-row">
        <div class="form-group col-sm-12 col-md-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group col-sm-12 col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group col-sm-12 col-md-4">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone" })
            @Html.ValidationMessageFor(m => m.Phone)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            @Html.TextAreaFor(m => m.Message, 5, 20, new { @class = "form-control", placeholder = "Message" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 ml-auto">
            <button id="contact-submit" type="submit" class="btn btn-primary float-right">SEND</button>
        </div>
    </div>
}
